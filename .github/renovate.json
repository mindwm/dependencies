{
  "labels": ["dependencies"], 
  "packageRules": [
      {
        "matchPackageNames": ["/kubernetes/"],
        "labels": ["kubernetes", "dependencies"]
      },
      {
        "matchPackageNames": ["/argocd/"],
        "labels": ["argocd", "dependencies"]
      },
      {
        "matchPackageNames": ["/crossplane/"],
        "labels": ["crossplane", "dependencies"]
      },
      {
        "matchPackageNames": ["/tekton/"],
        "labels": ["tekton", "dependencies"]
      },
      {
        "matchPackageNames": ["/helm-values/"],
        "labels": ["helm-values", "dependencies"]
      }
    ], 
  "prConcurrentLimit": 20,
  "kubernetes": {
    "managerFilePatterns": ["/\\.yaml$/"]
  },
  "argocd": {
    "managerFilePatterns": ["/\\.yaml$/"]
  },
  "crossplane": {
    "managerFilePatterns": ["/\\.yaml$/"]
  },
  "tekton": {
    "managerFilePatterns": ["/\\.yaml$/"]
  },
  "helm-values": {
    "managerFilePatterns": ["/\\.yaml$/"]
  }
}
